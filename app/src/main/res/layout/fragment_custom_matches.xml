<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_theme_onPrimary"
    android:orientation="vertical">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/custom_matches_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/add_match_floating_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:backgroundTint="@color/md_theme_primary"
            android:src="@drawable/plus_icon"
            app:fabCustomSize="@dimen/button_container"
            app:maxImageSize="@dimen/button_image"
            app:tint="@color/md_theme_onSecondaryFixed_highContrast" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/filter_date_floating_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|bottom"
            android:backgroundTint="@color/md_theme_primary"
            android:src="@drawable/calendar_icon"
            app:fabCustomSize="@dimen/button_container"
            app:maxImageSize="@dimen/button_image"
            app:tint="@color/md_theme_onSecondaryFixed_highContrast" />
    </FrameLayout>
</LinearLayout>